<section class="h-100 gradient-custom">
  <div class="container py-5">
    <div class="row d-flex justify-content-center my-4">
      <div class="col-md-8">
        <div class="card mb-4">
          <div class="card-header py-3">
            <h5 class="mb-0">Cart</h5>
          </div>
          <div class="card-body">
            <!-- Single item -->
            <% for( let i = 0; i < products.length; i++ ) { %>
            <div class="row">
              <div class="col-lg-3 col-md-12 mb-4 mb-lg-0">
                <!-- Image -->
                <div
                  class="bg-image hover-overlay hover-zoom ripple rounded"
                  data-mdb-ripple-color="light"
                >
                  <img
                    src="/images/uploaded/<%=products[i].image %>"
                    class="w-100"
                  />
                  <a href="#!">
                    <div
                      class="mask"
                      style="background-color: rgba(251, 251, 251, 0.2)"
                    ></div>
                  </a>
                </div>
                <!-- Image -->
              </div>

              <div class="col-lg-5 col-md-6 mb-4 mb-lg-0">
                <!-- Data -->
                <p><strong><%= products[i].title %> </strong></p>
                <p>Author: <%= products[i].author %></p>
                <p>Description: <%= products[i].description %></p>
                <p>Tags: <%= products[i].tags %></p>
                <!-- Data -->
              </div>

              <div class="col-lg-4 col-md-6 mb-4 mb-lg-0">
                <!-- Price -->
                <p class="text-start text-md-center">
                  <strong>Price: <%= products[i].price %> </strong>
                </p>
                <!-- Price -->
              </div>
            </div>
            <!-- Single item -->
            <hr class="my-4" />
            <% } %>
          </div>
        </div>
      </div>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="card-body">
            <ul class="list-group list-group-flush">
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 pb-0"
              >
                Products
                <span><%= total %> </span>
              </li>
              <li
                class="list-group-item d-flex justify-content-between align-items-center px-0"
              >
                Shipping
                <span>Gratis</span>
              </li>
              <li
                class="list-group-item d-flex justify-content-between align-items-center border-0 px-0 mb-3"
              >
                <div>
                  <strong>Total amount</strong>
                  <strong>
                    <p class="mb-0">(including VAT)</p>
                  </strong>
                </div>
                <span><strong><%= total+400 %> </strong></span>
              </li>
            </ul>

            <a href="/" class="btn btn-primary btn-lg btn-block"
              >Continue Shopping</a
            >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
