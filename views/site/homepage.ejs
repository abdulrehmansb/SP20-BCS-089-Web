<div class="row">
  <% for( let i = 0; i < products.length; i++ ) { %>
  <div class="col-sm-6 card" style="width: 18rem">
    <img
      class="card-img-top"
      src="/images/uploaded/<%=products[i].image %>"
      alt="Card image cap"
    />
    <div class="card-body">
      <h2 class="card-title">Title: <%= products[i].title %></h2>
      <h2 class="card-title">Price: <%= products[i].price %></h2>
      <h6 class="card-subtitle mb-2 text-muted">
        Author: <%= products[i].author %>
      </h6>
      <p class="card-text">Description: <%= products[i].description %></p>
      <p class="card-text">Tags: <%= products[i].tags %></p>
      <a href="/add-cart/<%=products[i]._id %>" class="btn btn-info w-full"
        >Add To Cart</a
      >
    </div>
  </div>
  <% } %>
</div>
